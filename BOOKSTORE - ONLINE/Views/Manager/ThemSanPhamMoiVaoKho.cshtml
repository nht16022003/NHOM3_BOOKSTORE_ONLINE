@model BOOKSTORE___ONLINE.Models.DB.SACH

@{
    ViewBag.Title = "Thêm sản phẩm mới vào kho";
    Layout = "~/Views/Shared/Layoutlogin.cshtml";
}

<div class="container mt-4">

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-box-seam"></i> Thêm sản phẩm mới vào kho
            </h5>
        </div>

        <div class="card-body">

            @using (Html.BeginForm("ThemAction", "Manager", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row">

                    <!-- CỘT TRÁI -->
                    <div class="col-md-6">



                        <div class="mb-3">
                            @Html.LabelFor(m => m.MADANHMUC, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.MADANHMUC, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MADANHMUC_CHILD, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.MADANHMUC_CHILD, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TENSACH, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.TENSACH, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TACGIA, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.TACGIA, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                    </div>

                    <!-- CỘT PHẢI -->
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NHAXUATBAN, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.NHAXUATBAN, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.GIABAN, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.GIABAN, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.SOLUONGTONKHO, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.SOLUONGTONKHO, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MANHACUNGCAP, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.MANHACUNGCAP, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                    </div>
                </div>

                <!-- MÔ TẢ + FILE -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.MOTACHITIET, new { @class = "form-label fw-semibold" })
                    @Html.TextAreaFor(m => m.MOTACHITIET, 3, 0, new { @class = "form-control" })
                </div>

                <div class="mb-4">
                    @Html.Label("MOTAFILE", "File mô tả", new { @class = "form-label fw-semibold" })
                    <input type="file"
                           name="MOTAFILE"
                           class="form-control"
                           accept=".pdf,.doc,.docx,.txt" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Ảnh sản phẩm</label>
                    <input type="file" name="AnhSach" class="form-control" accept="image/*" />
                </div>

                <!-- BUTTON -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle"></i> Thêm sản phẩm
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
                </div>
            }

        </div>
    </div>

</div>
