@model IEnumerable<BOOKSTORE___ONLINE.Models.DB.NHACUNGCAP>

<div class="container mt-4">

    <!-- TÌM KIẾM -->
    <div class="row mb-3">
        <div class="col-md-6 col-sm-12">
            @using (Html.BeginForm("timNCC", "Manager", FormMethod.Post, new { @class = "d-flex" }))
            {
                <input type="search"
                       name="timNcc"
                       class="form-control me-2"
                       placeholder="Tìm nhà cung cấp..." />

                <button class="btn btn-primary">
                    <i class="bi bi-search"></i> Tìm
                </button>
            }
        </div>
    </div>

    <!-- THÔNG BÁO LỖI -->
    @if (ViewBag.LoiTimNCC != null)
    {
        <div class="alert alert-danger py-2">
            @ViewBag.LoiTimNCC
        </div>
    }

    <!-- ACTION BUTTON -->
    <div class="row mb-3">
        <div class="col-md-6 col-sm-12 mb-2">
            @Html.ActionLink("➕ Thêm nhà cung cấp", "Create", null, new { @class = "btn btn-success w-100" })
        </div>
        <div class="col-md-6 col-sm-12">
            @Html.ActionLink("📄 Xem hóa đơn đã đặt", "XemHDNcc", null, new { @class = "btn btn-info w-100 text-white" })
        </div>
    </div>

    <!-- BẢNG -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Mã NCC</th>
                    <th>Tên nhà cung cấp</th>
                    <th>Địa chỉ</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.MANHACUNGCAP</td>
                        <td>@item.TENNHACUNGCAP</td>
                        <td>@item.DIACHI</td>
                        <td class="text-center">
                            @Html.ActionLink("Chọn", "dsSachNCC",
                                new { id = item.MANHACUNGCAP },
                                new { @class = "btn btn-sm btn-outline-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
