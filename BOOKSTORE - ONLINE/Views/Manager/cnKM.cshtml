@model BOOKSTORE___ONLINE.Models.DB.VOUCHER

@{
    ViewBag.Title = "Cập nhật khuyến mãi";
    Layout = "~/Views/Shared/Layoutlogin.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-sm border-0">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">🎁 Cập nhật Voucher / Khuyến mãi</h5>
        </div>

        <!-- BODY -->
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row">

                    <!-- CỘT TRÁI -->
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MACT, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.MACT, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaVoucher, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.MaVoucher, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenVoucher, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.TenVoucher, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.GiamGia, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                @Html.EditorFor(m => m.GiamGia, new { htmlAttributes = new { @class = "form-control" } })
                                <span class="input-group-text">₫</span>
                            </div>
                        </div>

                    </div>

                    <!-- CỘT PHẢI -->
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.SOLUONG, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayBatDau, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.NgayBatDau, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayKetThuc, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TrangThai, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                    </div>
                </div>

                <!-- BUTTON -->
                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        💾 Lưu thay đổi
                    </button>

                    @Html.ActionLink(
                        "Quay lại",
                        "Index",
                        null,
                        new { @class = "btn btn-outline-secondary ms-2 px-4" }
                    )
                </div>
            }

        </div>
    </div>

</div>
