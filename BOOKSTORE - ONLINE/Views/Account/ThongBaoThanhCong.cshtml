
@if (TempData["ThanhCong"] != null)
{
    <style>
        .container-fluid {
            background-color: #cecece20;
            height: 100vh; /* Chiều cao 100% của viewport */
            width: 100%;
            display: flex; /* Kích hoạt Flexbox */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

        .box_TB {
            background-color: #f8e1fd63;
            width: 300px;
            height: 200px;
            text-align: center;
            border: solid 2px green;
            border-radius: 20px;
            display: flex; /* Kích hoạt Flexbox */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center;
        }

        .item_box {
            width: 100px;
            height: 70px;
        }
    </style>

    <div id="sucessOverlay" class="container-fluid">

        <div class="box_TB">
            <div class="item_box">
                <img style="width:100%; height:100%;" src="@Url.Content("~/Content/TB.png")" alt="TB.png" />
            </div>
            <button class="btn btn-outline-primary" id="closeSucess">@Html.ActionLink("Đóng", "EditKhoNhanVien", "Manager")</button>
        </div>
    </div>
}
<script>
        function openLogin() {
            @Url.Action("EditKhoNhanVien","Manager")
        }
            document.getElementById('closeSucess').addEventListener('click', function () {
                document.getElementById('sucessOverlay').style.display = 'none';

        });
</script>