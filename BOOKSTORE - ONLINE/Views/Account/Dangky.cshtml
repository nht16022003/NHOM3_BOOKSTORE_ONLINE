@model BOOKSTORE___ONLINE.Models.DB.TAIKHOANKHACHHANG

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/Layoutlogin.cshtml";
}

<style>
    input{
        max-width: none;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Đăng ký tài khoản</h3>

                    @using (Html.BeginForm("Dangkyaction", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="mb-3">
                            @Html.Label("Tên đăng nhập", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.Label("Mật khẩu", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid mt-4">
                            <input type="submit" value="Đăng ký" class="btn btn-primary btn-block" />
                        </div>
                    }

                    <div class="text-center mt-3">
                        @Html.ActionLink("Đăng nhập ngay?", "Login", "Account", new { @class = "text-decoration-none" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
