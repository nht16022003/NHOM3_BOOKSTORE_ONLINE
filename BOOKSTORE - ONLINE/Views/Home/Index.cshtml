@model IEnumerable<BOOKSTORE___ONLINE.Models.Entities.SACHs>

@{
    ViewBag.Title = "Index";
    var listAnh = ViewBag.AS as List<BOOKSTORE___ONLINE.Models.Entities.ANHSACHs>;
}

<style>
    img {
        height: 300px;
    }

    .book-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

        .book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 35px rgba(0,0,0,0.15);
        }

    .book-img {
        height: 280px;
        object-fit: cover;
        background-color: #f4f6f9;
    }

    .book-title {
        font-size: 1rem;
        font-weight: 600;
        color: #2a3f54;
        height: 48px;
        overflow: hidden;
    }

    .book-desc {
        font-size: 0.85rem;
        color: #6c757d;
        height: 42px;
        overflow: hidden;
    }

    .book-price {
        font-size: 1.05rem;
        font-weight: 700;
        color: #e63946;
    }

    .btn-detail {
        border-radius: 20px;
        font-size: 0.85rem;
    }
</style>

<div class="container my-4">
    <div class="row g-4">

        @foreach (var item in Model)
        {
            var anh = listAnh.FirstOrDefault(x => x.MASACH == item.MASACH)?.LINKANH ?? "default.jpg";

            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card book-card h-100">

                    <img src="@Url.Content("~/Content/" + anh)"
                         class="card-img-top book-img"
                         alt="@item.TENSACH" />

                    <div class="card-body d-flex flex-column">

                        <h6 class="book-title">
                            @item.TENSACH
                        </h6>

                        <p class="book-desc">
                            @item.MOTACHITIET
                        </p>

                        <div class="mt-auto">
                            <div class="book-price mb-2">
                                @String.Format("{0:N0} ₫", item.GIABAN)
                            </div>

                            <a href="@Url.Action("DetailAction","Home", new { id = item.MASACH })"
                               class="btn btn-primary btn-detail w-100">
                                Xem chi tiết
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>

